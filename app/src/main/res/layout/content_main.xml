<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login"
    android:weightSum="1"
    android:padding="15dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre y Apellido:"
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textColor="@color/blanco"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/txt_Nombre"
            android:layout_alignEnd="@+id/txt_Nombre"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txt_Nombre"
            android:textColor="@color/colorAccent"
            android:ems="10"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:background="@color/blanco" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:textColor="@color/blanco"
            android:layout_below="@+id/txt_Nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <RadioGroup
            android:id="@+id/rdgGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_column="0"
            android:layout_span="2"
            android:layout_below="@+id/textView3">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:id="@+id/radioButtonHombre"
                android:checked="false"
                android:textColor="@color/blanco"
                android:textSize="23dp"
                android:paddingRight="30dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:textColor="@color/blanco"
                android:id="@+id/radioButtonMujer"
                android:checked="false"
                android:textSize="23dp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:textColor="@color/blanco"
            android:layout_below="@+id/rdgGrupo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:drawSelectorOnTop="true"
            android:layout_below="@+id/textView4"
            android:background="@color/blanco"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textColor="@color/blanco"
            android:layout_below="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtEmail"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:background="@color/blanco" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btn_save"
        android:background="@color/colorAccent"
        android:textColor="@color/blanco"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>